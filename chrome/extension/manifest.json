{
  "name": "ToneBoard Keyboard",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Learn Chinese tones while typing",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["cursor.js", "index.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "dict.json" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "action": {
    "default_title": "ToneBoard Input",
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/action16.png",
        "24": "icons/action24.png",
        "32": "icons/action32.png",
        "48": "icons/action48.png",
        "64": "icons/action64.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
